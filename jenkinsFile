pipeline {
    agent {
      node {
        label "main"
      } 
    }
     

    tools {
     terraform 'terraform'
    }

    stages {
      stage('fetch_latest_code') {
        steps {
         checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Zankruti2202/JenkinsFirst.git']]])       
 }
      }
           
      stage('TF Init&Plan') {
        steps {
          sh 'terraform init'
          sh 'terraform plan'
          }
      }

      

      stage('TF Apply') {
        steps {
          sh 'terraform apply -auto-approve'
        }
        
      }
    } 
  }
